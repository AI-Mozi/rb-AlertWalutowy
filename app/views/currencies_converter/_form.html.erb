<h4 class="center-align">CONVERT CURRENCIES</h4>
<%= form_tag currencies_converter_index_url, method: 'get', remote: true do%>
  <div class="row">  
    <div class="col s12 m8 offset-m2">
      <%= number_field_tag 'amount', 1 , min: 1, max: 10000000000, step: 0.001, class: 'quantity_input' %>
    </div>
    <div class="col s12 m8 offset-m2">
      <%= select_tag 'currency', options_for_select(Currency.all.pluck(:code))%>
    </div>
    <div class="col s12 m8 offset-m2">
      <%= select_tag "to_currency", options_for_select(Currency.all.pluck(:code))%>
    </div>
    <div class="center-align">
      <%= button_tag 'convert', class: "btn convert-button" %>
    </div>
  </div>
<% end %>