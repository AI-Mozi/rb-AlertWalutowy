<h4 class="center-align"><b>CONVERT CURRENCIES</b></h4>
<%= form_tag currencies_converter_index_url, method: 'get', remote: true do %>
  <div class="row converter-display">
    <div class="currency_buttons">
      <%= number_field_tag 'amount', 1 , min: 1, max: 10000000000, step: 0.001, class: 'quantity_input' %>
      <%= select_tag 'currency', options_for_select(Currency.all.pluck(:code)), class: 'first_currency'%>
    </div>
    <div class="convert-button">
      <%= button_tag 'convert', class: "btn" %>
    </div>
    <div class="currency_buttons">
    <div class="first_output"><p id="text_output"></p></div>
    <%= select_tag "to_currency", options_for_select(Currency.all.pluck(:code)), class: 'second_currency'%>
    </div>
  </div>
<% end %>