<div class="center-align">
  <h3 class="white-text">SELECT CURRENCIES</h3>
</div>
<div class="container user_currency">
  <%= simple_form_for @user_currency, url: {action: "create"}  do |f| %>
    <div class="row">
      <% Currency.all.each do |currency| %>
        <div class="col s10 offset-s2 m3 offset-m1">
          <p>
            <label>
              <%= check_box_tag currency.id, currency.id, current_user.currencies.include?(currency), :name => 'user[currency_ids][]' %>
              <span class="whitetext"><b><%= currency.name.upcase %></b></span>
            </label>    
          </p>
        </div>
      <% end %>
    </div> 
    <div class="center-align">
      <%= button_tag(type: "submit", :class => "waves-effect waves-light btn-large") do%>
        ADD CURRENCIES<i class="material-icons left">add</i>
      <%end%>
    </div>
  <% end %>
</div>